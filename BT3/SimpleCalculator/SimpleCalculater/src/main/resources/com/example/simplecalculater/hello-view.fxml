<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.simplecalculater.HelloController">
  <Label text="Máy tính đơn giản" alignment="CENTER"/>
  <TextField fx:id="operand1Field" promptText="Số thứ nhất"/>
  <TextField fx:id="operand2Field" promptText="Số thứ hai"/>
  <Label fx:id="resultLabel" text="" alignment="CENTER"/>
  <HBox spacing="10">
    <Button text="+" onAction="#add"/>
    <Button text="-" onAction="#subtract"/>
    <Button text="*" onAction="#multiply"/>
    <Button text="/" onAction="#divide"/>
  </HBox>
</VBox>
