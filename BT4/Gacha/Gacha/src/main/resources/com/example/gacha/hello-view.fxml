      fx:controller="com.example.gacha.HelloController">
  <Label text="Đoán số" alignment="CENTER"/>
  <TextField fx:id="guessField" promptText="Nhập số từ 0 - 100"/>
  <Button text="Kiểm tra" onAction="#checkGuess"/>
  <Label fx:id="resultLabel" text="" alignment="CENTER"/>
</VBox>
