<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bmiconverter.HelloController">
    <Label text="Tính chỉ số BMI" alignment="CENTER"/>
    <TextField alignment="CENTER" fx:id="heightField" promptText="Chiều cao (m)"/>
    <TextField alignment="CENTER" fx:id="weightField" promptText="Cân nặng (kg)"/>
    <Button text="Tính" onAction="#calculateBMI"/>
</VBox>